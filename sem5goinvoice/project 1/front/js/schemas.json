{
  "user": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50,
        "pattern": "^[a-zA-Z\\s]+$"
      },
      "email": {
        "type": "string",
        "format": "email",
        "maxLength": 100
      },
      "mobile": {
        "type": "string",
        "pattern": "^[0-9]{10}$"
      },
      "password": {
        "type": "string",
        "minLength": 8
      },
      "business_name": {
        "type": "string",
        "maxLength": 200
      },
      "gst_number": {
        "type": "string",
        "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$"
      },
      "address": {
        "type": "string",
        "maxLength": 500
      },
      "city": {
        "type": "string",
        "maxLength": 50
      },
      "state": {
        "type": "string",
        "maxLength": 50
      },
      "pincode": {
        "type": "string",
        "pattern": "^[1-9][0-9]{5}$"
      }
    },
    "required": ["name", "email", "mobile", "password"]
  },
  "customer": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "email": {
        "type": "string",
        "format": "email",
        "maxLength": 100
      },
      "mobile": {
        "type": "string",
        "pattern": "^[6-9]\\d{9}$"
      },
      "gst_number": {
        "type": "string",
        "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$"
      },
      "address": {
        "type": "string",
        "maxLength": 500
      },
      "city": {
        "type": "string",
        "maxLength": 50
      },
      "state": {
        "type": "string",
        "maxLength": 50
      },
      "pincode": {
        "type": "string",
        "pattern": "^[1-9][0-9]{5}$"
      },
      "type": {
        "type": "string",
        "enum": ["customer", "vendor"]
      }
    },
    "required": ["name", "type"]
  },
  "product": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 200
      },
      "description": {
        "type": "string",
        "maxLength": 1000
      },
      "hsn_sac": {
        "type": "string",
        "maxLength": 20
      },
      "unit": {
        "type": "string",
        "maxLength": 20,
        "default": "pcs"
      },
      "price": {
        "type": "number",
        "minimum": 0,
        "maximum": 99999999.99
      },
      "gst_rate": {
        "type": "number",
        "minimum": 0,
        "maximum": 100,
        "default": 18
      },
      "stock_quantity": {
        "type": "integer",
        "minimum": 0,
        "default": 0
      },
      "type": {
        "type": "string",
        "enum": ["product", "service"],
        "default": "product"
      }
    },
    "required": ["name", "price"]
  },
  "invoice": {
    "type": "object",
    "properties": {
      "invoice_number": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "customer_id": {
        "type": "integer",
        "minimum": 1
      },
      "invoice_date": {
        "type": "string",
        "format": "date"
      },
      "due_date": {
        "type": "string",
        "format": "date"
      },
      "subtotal": {
        "type": "number",
        "minimum": 0
      },
      "gst_amount": {
        "type": "number",
        "minimum": 0,
        "default": 0
      },
      "total_amount": {
        "type": "number",
        "minimum": 0
      },
      "payment_status": {
        "type": "string",
        "enum": ["pending", "paid", "partial"],
        "default": "pending"
      },
      "payment_method": {
        "type": "string",
        "enum": ["cash", "credit", "cheque", "online"],
        "default": "cash"
      },
      "notes": {
        "type": "string",
        "maxLength": 1000
      },
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "product_id": {
              "type": "integer",
              "minimum": 1
            },
            "quantity": {
              "type": "integer",
              "minimum": 1
            },
            "unit_price": {
              "type": "number",
              "minimum": 0
            },
            "gst_rate": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "default": 18
            }
          },
          "required": ["product_id", "quantity", "unit_price"]
        }
      }
    },
    "required": ["invoice_number", "customer_id", "invoice_date", "items"]
  },
  "login": {
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "format": "email"
      },
      "password": {
        "type": "string",
        "minLength": 1
      }
    },
    "required": ["email", "password"]
  },
  "signup": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50,
        "pattern": "^[a-zA-Z\\s]+$"
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "mobile": {
        "type": "string",
        "pattern": "^[6-9]\\d{9}$"
      },
      "password": {
        "type": "string",
        "minLength": 8,
        "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]+$"
      },
      "confirmPassword": {
        "type": "string",
        "minLength": 8
      }
    },
    "required": ["name", "email", "mobile", "password", "confirmPassword"]
  }
}
